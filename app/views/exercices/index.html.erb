<div class='main-container'>
  <h1 class='mb-5'>Pick up your practice!</h1>
  <div class="container">
    <% @exercices.each do |exercice| %>
      <div class="row mb-4">
        <div class="container card-exercice">
          <div class="row my-2">
            <div class="col-md-auto text-left">
              <h6> <%=  exercice.name %> </h6>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-9 text-left">
              <%= exercice.description %>
            </div>
          </div>
          <div class="row my-2 justify-content-end">
            <% if current_user %>
              <div class="col-6 col-md-2">
                <%= link_to 'Play', new_sentence_path(exercice: exercice), { :class=>'btn cool-button mx-3' }  %>
              </div>
              <div class="col-6 col-md-2">
                <%= link_to 'Settings', exercice_setup_path(exercice.id), { :class=>'btn cool-button mx-3' }  %>
              </div>
            <% elsif !current_user && exercice.structure.name == 's_v_do' %>
            <div class="col-6 col-md-2">
              <%= link_to 'Play', new_sentence_path(exercice: exercice), { :class=>'btn cool-button mx-3' }  %>
            </div>
            <div class="col-6 col-md-2">
              <%= link_to 'Settings', exercice_setup_path(exercice.id), { :class=>'btn no-singin-button mx-3' }  %>
            </div>
            <% else %>
              <div class="col-6 col-md-2">
                <%= link_to 'Play', new_user_registration_path, { :class=>'btn no-singin-button mx-3' }  %>
              </div>
              <div class="col-6 col-md-2">
                <%= link_to 'Settings', new_user_registration_path, { :class=>'btn no-singin-button mx-3' }  %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
