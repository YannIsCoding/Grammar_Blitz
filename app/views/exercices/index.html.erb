<div class='main-container'>

  <h1 class='mb-5'>Pick up your practice!</h1>
  <div class="container">

    <div class="row justify-content-center">

      <div class="col-12 col-md-9">
        <div class="container">
          <% @exercices.each do |exercice| %>
            <div class="row mb-4">
              <div class="container card-exercice">

                <div class="row my-2">
                  <div class="col-md-auto text-left">
                    <h6> <%=  exercice.name %> </h6>
                  </div>
                </div>

                <div class="row my-2">
                  <div class="col-9 text-left">
                    <%= exercice.description %>
                  </div>
                </div>

                <div class="row my-4 justify-content-end">
                  <div class="col-6 col-md-2">
                    <%#= link_to 'Settings', exercice_setup_path(exercice.id), { :class=>'index-button mx-3' }  %>
                  </div>

                  <div class="col-6 col-md-3">
                    <%= link_to 'Play', new_sentence_path(exercice: exercice.id), { :class=>'index-button mx-3' }  %>
                  </div>
                </div>

              </div>
            </div>
          <% end %>

          <%= link_to 'test', exercice_verb_practice_path(exercice_id: Exercice.find_by(structure: 'sein_present'))  %>
        </div>
      </div>

      <% if current_user %>
        <%= render 'side_bar' %>
      <% end %>

    </div>

  </div>

</div>
