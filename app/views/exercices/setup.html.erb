      <%#= check_box_tag(:noun, 3, (active_tag(@sentence.word_indexes, 3)), class:"no-display") %>
      <%#= label_tag(:noun, "Noun", class:"form-label #{'active-form' if active_tag(@sentence.word_indexes, 3)}") %>

      <%# if @sentence.exercice.structure.name == 's_v_io_do'  %>
        <%#= check_box_tag(:noun2, 5, (active_tag(@sentence.word_indexes, 5)), class:"no-display") %>
        <%#= label_tag(:noun2, "Noun 2", class:"form-label #{'active-form' if active_tag(@sentence.word_indexes, 5)}") %>
      <%# end %>
    <%# end %>

    <div class="mt-4">
      <%= submit_tag("Los!", class:'cool-button px-5') %>
    </div>

  <% end %>

</div>
