<div class='main-container'>
  <h1><%= @exercice.name %></h1>
  <p class="mt-4">Select more elements of the sentence to be tested on!</p>

  <%= form_with url: sentence_setup_path(@sentence&.id), method: :patch, local: true, html: { autocomplete: "off" }  do %>

    <%= hidden_field_tag 'exercice_id', "#{@exercice.id}" %>
    <%= hidden_field_tag 'setup', "true" %>

  <% @exercice.index_mapping.each do |el| %>
    <%= check_box_tag(el.first, el.second, (active_element?(@sentence.word_indexes, el.second)), class:"no-display") %>
    <%= label_tag(el.first, el.first.to_s, class:"form-label #{'active-form' if active_element?(@sentence.word_indexes, el.second)}") %>
  <% end %>
