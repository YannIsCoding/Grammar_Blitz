<% if already_tried(current_user, exercice) %>
  <%= form_with(url: "/exercice_try/#{exercice.id}", method: 'post', local: true, html: { autocomplete: "off" }) do %>
    <%= hidden_field_tag sentence: exercice.sentence  %>
    <% exercice.hide_index.each_with_index do |_value, index| %>
      <%= text_field_tag "response_#{index}".to_sym, '', class:'input-field mr-3', autofocus: index.zero? ? true : false %>
    <% end %>
    <%= submit_tag "BANG!", class:'cool-button' %>
  <% end %>

<% else %>
  <%= form_with(url: "/exercice_try/#{exercice.id}", method: 'post', local: true, html: { autocomplete: "off" }) do %>
    <% exercice.hide_index.each_with_index do |_value, index| %>
      <%= text_field_tag "response_#{index}".to_sym, '', class:'input-field mr-3', autofocus: index.zero? ? true : false %>
    <% end %>
    <%= submit_tag "BANG!", class:'cool-button' %>
  <% end %>

<% end %>
