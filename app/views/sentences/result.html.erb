<div class='main-container'>

  <div class="go-back mb-5">
    <%= link_to 'Other exercises', exercices_path(@exercice), class:'green-button mx-3' %>
  </div>

  <div class="result-container py-5 px-2">
    <h3><%= @exercice.name %></h3>
    <% batch_percent = percentage_for_batch(@sentence) %>

    <div class="mt-4">
      <h6>You had <%= @sentence.trials.where(result: :success).count %> correct answers</h6>
      <div class="progress mb-4 progressbar-container">
        <div class="progress-bar bg-success progress-bar-striped progress-bar-animated"
              role="progressbar"
              style="width: <%= batch_percent %>%"
              aria-valuemin="0"
               aria-valuemax="100">
               <%= batch_percent %>%
        </div>
        <div class="progress-bar bg-warning"
             role="progressbar"
             style="width: <%= 100 - batch_percent %>%"
             aria-valuemin="0"
             aria-valuemax="100">
             <%= 100 - batch_percent %>%
        </div>
      </div>

      <p>Your progress so far today:</p>
      <% percent = percentage_for_day(current_user, @exercice, 1) %>

      <div class="progress mb-4 progressbar-container">
        <div class="progress-bar bg-success progress-bar-striped progress-bar-animated"
             role="progressbar"
             style="width: <%= percent %>%"
             aria-valuemin="0"
             aria-valuemax="100">
             <%= percent %>%
        </div>
        <div class="progress-bar bg-warning"
             role="progressbar"
             style="width: <%= 100 - percent %>%"
             aria-valuemin="0"
             aria-valuemax="100">
             <%= 100 - percent %>%
        </div>
      </div>
      <div class="container">
        <div class="row justify-content-end mt-5">
          <div class="col-12 col-md-4 py-4">
            <%= link_to 'Try again!', @try_again_link, class:'cool-button mx-3', method:'get' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
