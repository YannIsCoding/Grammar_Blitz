<div class='main-container main-container-exercice'>
  <h3><%= @exercice.name %></h3>

  <% percent = (((@sentence.session_counter - 1) / 10.0) * 100) %>

  <div class="progress mb-4 mx-3">
    <div class="progress-bar bg-info progress-bar-striped progress-bar-animated" role="progressbar" style="width: <%= percent %>%" aria-valuemin="0" aria-valuemax="100"> </div>
    <div class="progress-bar bg-info" role="progressbar" style="width: <%= 100 - percent %>%" aria-valuemin="0" aria-valuemax="100"></div>
  </div>

  <div class="exercice-container mx-3">

    <%= render partial: 'sentences/shared/form', sentence: @sentence, prev_sentence: @prev_sentence, responses: @responses, result: @result %>

    <%= render partial: 'sentences/shared/keyboard' %>

  </div>
</div>
