<div id="sentence-container">

  <% if show_streak?(@sentence.streak) %>
    <!-- Congrat streak message -->
    <div class="container">
      <div class="row justify-content-end">
        <div class="streak-message blink-streak p-2">
          <p> <%= @sentence.streak %>  correct answers in a row! </p>
          <p class='font-weight-bold'> <%= streak_congratulation %> </p>
        </div>
      </div>
    </div>
  <% end %>

  <p id="english-sentence"> <%= @sentence.english %> </p>

  <%= form_for(@sentence, method: :patch, remote: true, html: { autocomplete: "off", autocapitalize: 'off' }) do %>
      <div class='d-flex flex-row'>

        <% split_sentence(@sentence.value, @exercice.hide_index).each_with_index do |fragment, index| %>
            <% if @sentence.word_indexes.include?(index)  %>
              <%= text_field_tag "response_#{index}".to_sym, '', class:'input-field mx-2 mb-2 response flex-grow-1' %>
            <% else %>
          <p class="sentence d-inline flex-grow-1 mr-2">
              <%= fragment %>
          </p>
            <% end %>
        <% end %>
      </div>

    <%= submit_tag "BANG!", class:'cool-button text-center' %>

  <% end %>
</div>
