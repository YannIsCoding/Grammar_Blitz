<div class="main-container">
  <h1>Welcome to your profile modificaiton page</h1>
  <%= cl_image_tag @user.photo, crop: :fill, class: 'avatar-large' %>

  <%= simple_form_for(@user) do |f| %>
    <%= f.input :username  %>
    <%= f.input :email  %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit 'submit' %>
  <% end %>

</div>
